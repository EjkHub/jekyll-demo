{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Jekyll",
      "type": "shell",
      "command": "bundle exec jekyll clean",
      "group": "build"
    },
    {
      "label": "Serve Jekyll",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload",
      "group": "build"
    },
    {
      "label": "Clean and Serve",
      "dependsOrder": "sequence",
      "dependsOn": ["Clean Jekyll", "Serve Jekyll"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}